 <!-- form handling -->
 <form action="/api/notes" method="POST" id="add_note">
    <div class="new_note">
        <div class="form-group">
            <label for="name" class="text-light">Title</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="title" value="" placeholder="Title">
        </div>
        <div class="form-group">
            <label for="content" class="text-light">Content</label>
            <input type="text" name="content" value="" placeholder="Content">
        </div>
